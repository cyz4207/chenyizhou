<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/soushuo"
        android:textColor="#fcfbfb"
        android:background="#fd0303"
        android:layout_alignParentRight="true"/>
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ss"
        android:layout_toLeftOf="@id/button"
        android:layout_alignBottom="@id/button"/>
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:layout_below="@id/editText1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/leadtext_description1"
                android:src="@drawable/adware_style_default" />
            <ImageView
                android:id="@+id/icon2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/leadtext_description2"
                android:src="@drawable/adware_style_default" />
            <ImageView
                android:id="@+id/icon3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="5dp"
                android:contentDescription="@string/leadtext_description2"
                android:src="@drawable/adware_style_default" />
        </LinearLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
    </RelativeLayout>
    <ListView
        android:id="@+id/list_01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bar">
    </ListView>
</RelativeLayout>
